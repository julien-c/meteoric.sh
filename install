#!/bin/sh

INSTALL_DIR="$HOME/.meteoric.sh"

if [ ! -d "$INSTALL_DIR" ];
then
	git clone http://github.com/julien-c/meteoric.sh.git "$INSTALL_DIR"
else
        cd "$INSTALL_DIR"
	git pull "$INSTALL_DIR"
	cd -
fi

if [ ! -f /usr/local/bin/meteoric ];
then
	ln -s "$INSTALL_DIR/meteoric.sh" /usr/local/bin/meteoric
fi
